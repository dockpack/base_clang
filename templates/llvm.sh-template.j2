{% if llvm_compilation is defined and llvm_compilation|bool -%}
## add env var LLVM_ROOT - used in emacs setup
export LLVM_ROOT={{ llvm_install_dir }}
export PATH={{ llvm_bin_dir }}:$PATH
{% endif -%}
export CC={{ llvm_bin_dir | default('/usr/bin/') }}clang
export CXX={{ llvm_bin_dir | default('/usr/bin/') }}clang++
export CPP={{ llvm_bin_dir | default('/usr/bin/') }}clang-cpp
